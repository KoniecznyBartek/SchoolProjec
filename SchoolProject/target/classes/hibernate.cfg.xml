<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hbm2ddl.auto">update</property>
        <property name="dialect">org.hibernate.dialect.MySQL8Dialect</property>
        <property name="connection.url">jdbc:mysql://127.0.0.1:3306/school</property>
        <property name="connection.username">root</property>
        <property name="connection.password">Example@2023#</property>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <mapping class="model.Person"></mapping>
        <mapping class="model.Person"/>
        <mapping class="model.Subject"/>

    </session-factory>
</hibernate-configuration>